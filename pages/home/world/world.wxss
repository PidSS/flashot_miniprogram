page{
  background-color: #F4F4F4;
}

#outerSheet{
  position: absolute;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  bottom: 0;
  height: calc(100vh - 70px);
  width: 100%;
  background-color: #ffffff;
  border-radius: 36px 36px 0 0;
  box-shadow: 0 0 16px 0 rgba(0,0,0,0.1);
}

#innerSheet{
  position: absolute;
  bottom: 0;
  height: calc(100vh - 110px);
  width:100%;
  background-color: #f8fafa;
  border-radius: 36px 36px 0 0;
  box-shadow: 0 0 4px 0 rgba(153,177,173,0.38) inset;
  overflow: auto;
}

.smallTab{
  height:40px;
  padding-top: 7px;
  font-size: 17px;
  font-weight: 900;
  color: #707070;
}

#banner{
  position: relative;
  top: 24px;
  border:1px solid #00aa90;
  border-radius: 24px;
  width: 660rpx;
  height: 275rpx;
  margin: auto;
  overflow: hidden;box-shadow: 0 3px 3px 0 rgba(153,177,173,0.38);
}

#banner swiper-item{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  font-size: 40px;
  font-weight: 900;
  color: rgba(255,255,255,0.4);
}

#entranceSheet{
  position: static;
  height: 86px;
  width: 660rpx;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 24px;
  padding-top: 40px;
  background-color: #ffffff;
  border-radius: 0 0 24px 24px;
  box-shadow: 0 2px 12px 0 rgba(153,177,173,0.38);
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-evenly;
}

.unions{
  height: 80px;
}

.unions image{
  width: 48px;
  height: 48px;
  border-radius: 12px;
  margin: auto;
}

.unions view{
  text-align: center;
  line-height: 20px;
  font-size: 15px;
  font-weight: bold;
  color: rgba(112,112,112,1);
}

.card{
  position: static;
  width: 660rpx;
  max-height: 1000px;
  background-color: #ffffff;
  border-radius: 24px;
  box-shadow: 0 2px 12px 0 rgba(153,177,173,0.38);
  margin: 18px auto 0;
  padding: 16px 22px 6px;
  box-sizing: border-box;
}

.infoBlock{
  height: 32px;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.infoBlock image{
  border: 1px solid #707070;
  border-radius: 100%;
  height: 32px;
  width: 32px;
  margin-right: 6px;
}

.infoBlock > view{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.infoBlock > view > view{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  flex-wrap: nowrap;
  font-size: 12px;
  font-weight: normal;
  line-height: 18px;
}

.infoBlock > view > view > view:first-child{
  font-size: 16px;
  font-weight: bold;
  margin-right: 5px;
  color: rgb(112,112,112);
}

.infoBlock > view > view >view:first-child +view{
  color: rgb(157,157,157);
}

.infoBlock > view > view + view{
  color: rgb(145, 145, 145);
}

.mainPic{
  border:1px solid rgba(112,112,112,1);
  max-height: 336px;
  max-width: 100%;
  min-height: 0;
  min-width: 0;
  margin-top:16px;
  border-radius: 18px;
}

.cardText{
  margin:4px 6px;
  font-size: 14px;
  color: rgb(145, 145, 145);
}

.bottomBox{
  width: 100%;
  height: 30px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.bottomBox view{
  width: 100%;
  height: 100%;
  text-align: center;
}

#follows{
  border-width: 2px;
  border-style: none solid none solid;
  border-color: rgb(157,157,157);
}