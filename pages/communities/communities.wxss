/* pages/communities/communities.wxss */
page{
  background-color: #f4f4f4;
}

#cardMyCmt, #cardMyDescriptions{
  padding-top: 12px;
  padding-bottom: 12px;
}

#cardMyCmt > view:first-child,
#cardMyDescriptions > view:first-child{
  padding-left: 8px;
  padding-bottom: 8px;
  line-height: 20px;
  font-size: 20px;
  font-weight: bold;
  color: rgb(112,112,112);
}

.groove{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;
  width: 100%;
  background-color: #f8fafa;
  border-radius: 24px;
  box-shadow: 0 0 4px 0 rgba(153,177,173,0.38) inset;
  overflow: hidden;
  white-space: nowrap;
}

.scroll-space{
  width: 8px;
  display: inline-block;
}

.scroll-item{
  position: relative;
  display: inline-block;
  width: 144px;
  margin: 8px 5px;
  padding: 8px;
  background-color: #ffffff;
  border-radius: 16px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 0 rgba(153,177,173,0.38);
}

.scroll-item image{
  display: inline-block;
  height: 48px;
  width: 48px;
  margin-right: 6px;
  border: 1px solid #f4f4f4;
  background-color: rgba(127, 255, 212, 0.349);
  border-radius: 12px;
}

.scroll-item image + view{
  position: absolute;
  top: 8px;
  right: 5px;
  display: inline-block;
  box-sizing: border-box;
  height: 36px;
  width: 74px;
  padding: 2px 0;
  font-size: 14px;
  color: rgb(0,170,144);
  line-height: 18px;
  font-weight: bold;
  white-space: normal;
}

.scroll-item image + view + view{
  display: inline-block;
  line-height: 8px;
  color: rgb(157,157,157);
  font-size: 10px;

}

.scroll-item image + view + view + view{
  white-space: normal;
  margin: 2px 4px;
  width: 100%;
  height: 64px;
  font-size: 12px;
  line-height: 16px;
  color: rgb(145,145,145);
}

#cmtBrowser{
  width: 100%;
  height: calc(100vh - 110px);
  margin-top: 36px;
  padding: 0;
  display: flex;
  flex-direction: row-reverse;
  flex-wrap: nowrap;
  overflow: hidden;
  background-color: #f8fafa;
  border-radius: 36px 36px 0 0;
  box-shadow: 0 0 12px 0 rgba(153,177,173,0.38);
}

.sideTableContainer{
  position: relative;
  width: 200rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  padding: 40px 0;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  background-color: #ffffff;
  z-index: 10;
}

.sideTable{
  height: 100%;
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: rgb(145,145,145);
  border-top: 1px solid rgba(0,0,0,0.08);
  border-bottom: 1px solid rgba(0,0,0,0.08);
}

#browserContainer{
  position: relative;
  width: 100%;
  height: 100%;
  box-shadow: -2px 0 6px 1px rgba(0,0,0,0.08);
  z-index: 100;
}