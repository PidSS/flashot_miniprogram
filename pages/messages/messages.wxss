/* pages/messages/messages.wxss */
page{
  background-color: #f4f4f4;
}

.space1{
  height: 14px;
}

.closerCard{
  position: relative;
  width: 660rpx;
  height: 80px;
  background-color: #ffffff;
  border-radius: 12px;
  box-shadow: 0 0 12px 0 rgba(153,177,173,0.38);
  margin: 4px auto;
  padding: 6px 18px;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.closerCard image{
  border-radius: 28px;
  width: 56px;
  height: 56px;
  flex-shrink: 0;
}

.closerCard > view{
  margin-left: 12px;
  width: 100%;
}

.senderName{
  font-size: 14px;
  color: rgb(112,112,112);
  line-height:14px;
  font-weight: bold;
}

.senderName > text{
  float: right;
  font-size: 12px;
  font-weight: normal;
  color: rgb(157,157,157);
}

.space2{
  height: 6px;
}

.text{
  font-size: 12px;
  color: rgb(145,145,145);
  line-height: 16px;
}