.theBox{
  position: fixed;
  top: 25px;
  height: 32px;
  width: 480rpx;
  left: 14px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.goBackButton{
  flex-shrink: 0;
  width: 42px;
  height: 26px;
  margin-right: 8px;
  background-color: rgb(0,170,144);
  border-radius: 16px;
  box-shadow: 0 0 4px 0 rgba(0,181,154,64%);
}

.goBackButton image{
  height: 100%;
  width: 20px;
  transform: translateX(-50%);
  position: relative;
  left: 47%;
}

.inputBar{
  width: 100%;
  height: 32px;
  background-color: rgb(248,250,250);
  border-radius: 16px;
  box-shadow: 0 0 3px 0 rgba(0,0,0,0.16) inset;
  font-size: 13px;
  padding-left: 16px;
  color: rgb(145,145,145);
}

.inputBarText{
  font-size: 13px;
  color: rgb(145, 145, 145, 0.6);
}