/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

#outerSheet{
  position: absolute;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  bottom: 0;
  height: calc(100vh - 70px);
  width: 100%;
  background-color: #ffffff;
  border-radius: 36px 36px 0 0;
  box-shadow: 0 0 16px 0 rgba(0,0,0,0.1);
}

#innerSheet{
  position: absolute;
  bottom: 0;
  height: calc(100vh - 110px);
  width:100%;
  background-color: #f8fafa;
  border-radius: 36px 36px 0 0;
  box-shadow: 0 0 4px 0 rgba(153,177,173,0.38) inset;
  overflow: auto;
}

.decorationLine{
  background-color: rgba(0,0,0,0.16);
  width: 120rpx;
  height: 5px;
  margin-top: 18px;
  border-radius: 3px;
}


.card{
  position: relative;
  width: 660rpx;
  background-color: #ffffff;
  border-radius: 24px;
  box-shadow: 0 2px 12px 0 rgba(153,177,173,0.38);
  margin: 18px auto 0;
  padding: 16px 22px 6px;
  box-sizing: border-box;
}
